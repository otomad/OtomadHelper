<UserControl
	x:Class="OtomadHelper.Module.MainWPFDock"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OtomadHelper.Module"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="300"
	d:DesignWidth="600"
	mc:Ignorable="d">
	<Grid>
		<Wpf:WebView2
			x:Name="Browser"
			CoreWebView2InitializationCompleted="Browser_CoreWebView2InitializationCompleted"
			WebMessageReceived="Browser_WebMessageReceived" />
		<Grid>
			<Image
				x:Name="LoadingAnimationPicture"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Source="/Assets/LoadingAnimation.apng"
				Stretch="None" />
		</Grid>
	</Grid>
</UserControl>
