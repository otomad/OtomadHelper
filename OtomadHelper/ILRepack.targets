<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
	<!-- ILRepack -->
	<Target Name="ILRepacker" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
		<!-- Condition="'$(Configuration)' == 'Release'" -->
		<ItemGroup>
			<InputAssemblies Include="$(TargetPath)" />
			<!--<InputAssemblies Include="@(ReferencePathWithRefAssemblies)" />-->
			<InputAssemblies Include="$(OutputPath)*.dll" Exclude="$(TargetPath)" />
			<InputAssemblies Remove="$(OutputPath)WebView2Loader.dll" />
			<InputAssemblies Remove="$(OutputPath)Melanchall_DryWetMidi_Native*.dll" />
		</ItemGroup>
		<ILRepack
			Parallel="true"
			DebugInfo="true"
			Internalize="false"
			InputAssemblies="@(InputAssemblies)"
			TargetKind="SameAsPrimaryAssembly"
			LibraryPath="$(OutputPath)"
			OutputFile="$(TargetPath)"
			AllowDuplicateResources="false"
		/>
	</Target>
	<!-- /ILRepack -->
</Project>
