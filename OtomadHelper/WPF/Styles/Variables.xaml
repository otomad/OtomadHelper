<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:s="clr-namespace:System;assembly=mscorlib"
	>
	<!--#region Focus Visual Styles-->
	<Style x:Key="OuterFocusVisualStyle">
		<Setter Property="Control.Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						Margin="-3"
						RadiusX="6"
						RadiusY="6"
						Stroke="{DynamicResource ForegroundBrush}"
						StrokeThickness="2"
						/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<Style x:Key="InnerFocusVisualStyle">
		<Setter Property="Control.Template">
			<Setter.Value>
				<ControlTemplate>
					<Rectangle
						RadiusX="6"
						RadiusY="6"
						Stroke="{DynamicResource ForegroundBrush}"
						StrokeThickness="2"
						/>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
	<!--#endregion-->
</ResourceDictionary>
