<Viewbox
	x:Class="OtomadHelper.WPF.Controls.Icon"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:OtomadHelper.WPF.Controls"
	x:Name="View"
	Width="{Binding Size, ElementName=View}"
	Height="{Binding Size, ElementName=View}"
	>
	<Canvas Width="{Binding Source.Size, ElementName=View}" Height="{Binding Source.Size, ElementName=View}">
		<Path Data="{Binding Source.Path, ElementName=View}" Fill="{Binding Foreground, ElementName=View}" />
	</Canvas>
</Viewbox>
