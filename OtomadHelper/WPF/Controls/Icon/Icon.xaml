<Viewbox
	x:Class="OtomadHelper.WPF.Controls.Icon"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:OtomadHelper.WPF.Controls"
	x:Name="View"
	Width="{Binding Size, ElementName=View}"
	Height="{Binding Size, ElementName=View}"
	>
	<Viewbox.Resources>
		<Style TargetType="Canvas">
			<Setter Property="Width" Value="{Binding Source.Size, ElementName=View}" />
			<Setter Property="Height" Value="{Binding Source.Size, ElementName=View}" />
		</Style>
		<Style TargetType="Path">
			<Setter Property="Data" Value="{Binding Source.Path, ElementName=View}" />
			<Setter Property="Fill" Value="{Binding Foreground, ElementName=View}" />
		</Style>
	</Viewbox.Resources>

	<Canvas>
		<Path />
	</Canvas>
</Viewbox>
