<c:BackdropWindow
	x:Class="OtomadHelper.WPF.Controls.ComboBoxFlyout"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="clr-namespace:OtomadHelper.WPF.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:f="clr-namespace:OtomadHelper.WPF.Controls.Flyouts"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:s="clr-namespace:System;assembly=mscorlib"
	Width="200"
	BorderBrush="{DynamicResource CardStroke}"
	BorderThickness="1"
	Deactivated="Window_Deactivated"
	ResizeMode="NoResize"
	ShowInTaskbar="False"
	SizeToContent="Height"
	TitleBarType="WindowChromeNoTitleBar"
	WindowStartupLocation="Manual"
	mc:Ignorable="d"
	Loaded="ComboBoxFlyout_Loaded">
	<c:BackdropWindow.Resources>
		<Thickness x:Key="Margin">4</Thickness>
		<Style TargetType="StackPanel">
			<Setter Property="Orientation" Value="Vertical" />
			<Setter Property="Margin" Value="{StaticResource Margin}" />
		</Style>
	</c:BackdropWindow.Resources>

	<StackPanel x:Name="Container" Orientation="Vertical" />
</c:BackdropWindow>
