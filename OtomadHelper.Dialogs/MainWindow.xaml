<Window
	x:Class="OtomadHelper.Dialogs.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OtomadHelper.Dialogs"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="MainWindow"
	Width="800"
	Height="450"
	Background="Transparent"
	Loaded="Window_Loaded"
	ResizeMode="NoResize"
	ShowInTaskbar="False"
	mc:Ignorable="d">
	<WindowChrome.WindowChrome>
		<WindowChrome
			CaptionHeight="20"
			CornerRadius="0"
			GlassFrameThickness="-1"
			ResizeBorderThickness="8"
			NonClientFrameEdges="Right"
			UseAeroCaptionButtons="True" />
	</WindowChrome.WindowChrome>

	<StackPanel Margin="16,48,16,16">
		<StackPanel.Resources>
			<Style TargetType="RadioButton">
				<Setter Property="Foreground" Value="White" />
			</Style>
		</StackPanel.Resources>
		
		<RadioButton x:Name="AcrylicRadio" Checked="RadioButton_Checked" Tag="3" IsChecked="True">Acrylic</RadioButton>
		<RadioButton x:Name="MicaRadio" Checked="RadioButton_Checked" Tag="2">Mica</RadioButton>
		<RadioButton x:Name="MicaAltRadio" Checked="RadioButton_Checked" Tag="4">MicaAlt</RadioButton>
	</StackPanel>
</Window>
