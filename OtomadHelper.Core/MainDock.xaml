<UserControl
	x:Class="OtomadHelper.Core.MainDock"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:OtomadHelper.Core"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="480"
	d:DesignWidth="800"
	mc:Ignorable="d"
	FontFamily="Microsoft YaHei UI">
	<StackPanel MaxWidth="300" VerticalAlignment="Center">
		<StackPanel.Resources>
			<Thickness x:Key="MarginSpacing">0,4,0,4</Thickness>
		</StackPanel.Resources>
		<TextBlock x:Name="ReceivedLbl" Text="Loaded!" Margin="{DynamicResource MarginSpacing}" />
		<TextBox x:Name="SendTxt" Margin="{DynamicResource MarginSpacing}" />
		<Button x:Name="SendBtn" Content="_Send" Click="SendBtn_Click" Margin="{DynamicResource MarginSpacing}" />
		<Button x:Name="OpenClientBtn" Content="Open _client" Click="OpenClientBtn_Click" Margin="{DynamicResource MarginSpacing}" />
	</StackPanel>
</UserControl>
